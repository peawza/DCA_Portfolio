@inject IMessageLocalizer localizer

<style>
    
</style>
<div id="usergroup-window-dialog" style="align-items: center; ">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <input type="hidden" id="status-mode" value="" />
                <input type="hidden" id="usergroup-id" value="" />
                <div class="col-lg-12 col-md-12 col-sm-12 mt-2 mb-2">
                    <label for="ip-usergroupname" class="col-form-label text-left text-md-start w-100">
                        @Resources["UMS021", "IP001"] <span class="text-color-red"> *</span>
                    </label>
                    <input id="ip-usergroupname" name="ip-usergroupname" required validationMessage="@localizer["FieldRequired", @Resources["UMS021", "IP001"]]" maxlength="50" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 mt-2 mb-2">
                    <label for="ip-description" class="col-form-label text-left text-md-start w-100">
                        @Resources["UMS021", "IP002"] <span class="text-color-red"> *</span>
                    </label>
                    <textarea id="ip-description" name="ip-description" maxlength="500" required validationMessage="@localizer["FieldRequired", @Resources["UMS021", "IP002"]]"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 mt-2 mb-2">
                    <label for="ip-status" class="col-form-label text-left text-md-start w-100">
                        @Resources["UMS021", "IP003"] <span class="text-color-red"></span>
                    </label>
                    <input id="ip-status" name="ip-email" />
                </div>
            </div>
        </div>
    </div>
</div>