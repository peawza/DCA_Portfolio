FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

WORKDIR /src


COPY . .
RUN dotnet restore "./GatewayYarpSolution/Gateway_Yarp_Solution.csproj"
WORKDIR "/src/GatewayYarpSolution"
RUN dotnet build "./Gateway_Yarp_Solution.csproj" -c Release -o /app/build
RUN dotnet publish "./Gateway_Yarp_Solution.csproj" -c Release -o /app/publish /p:UseAppHost=false


FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base

WORKDIR /app
EXPOSE 8080
EXPOSE 8081

COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "Gateway_Yarp_Solution.dll"]